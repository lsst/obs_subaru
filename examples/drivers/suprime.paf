#<?cfg paf policy>

camera: suprime

do: {
    calibrate: {
        psf: true
#		zeropoint: true
	}
#    phot: true
}

imports: {
    HSM: lsst.meas.extensions.shapeHSM
    KRON: lsst.meas.extensions.photometryKron
    ROTANGLE: lsst.meas.extensions.rotAngle
}

calibrate: {
# can't persist sgPsf
#    model: "SingleGaussian"
     model: "DoubleGaussian"
     fwhm: 2.35  # arcsec
     size: 15
	# this is used by Calibrate
	thresholdValue: 6.0
}

detect: {
	# this is used by Photometry
	# (when not called by Calibrate)
    thresholdValue: 5.0
    thresholdType: stdev
}

measure: {
    source: {
		astrom:  "SDSS"
        apFlux:  "SINC"
        modelFlux: "GAUSSIAN"
        psfFlux: "PSF"
#       shape: "HSM_REGAUSS"
        shape: "SDSS"
    }
    shape: {
#        HSM_BJ: {
#            enabled: true
#        }
        SDSS: {
            enabled: true
        }
	}
    astrometry: {
        GAUSSIAN: {
            enabled: true
        }
	}
    photometry: {
        GAUSSIAN: {
            background: 0.0
            shiftmax: 10
        }
        NAIVE: {
            radius: 9.0
        }
        PSF: {
            enabled: true
        }
        SINC: {
            radius: 9.0
        }
    }
}

